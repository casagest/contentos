# ============================================================
# ContentOS Environment Variables
# ============================================================

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Anthropic (AI Engine)
ANTHROPIC_API_KEY=sk-ant-xxxxx

# AI provider mode (applies to all AI routes: braindump/score/generate/coach/research)
# AI_PROVIDER=anthropic | openrouter | template
AI_PROVIDER=anthropic
# Hard kill-switch for paid AI calls (forces deterministic mode on all routes)
AI_FORCE_TEMPLATE=false
# Optional override when AI_PROVIDER=anthropic
AI_API_KEY=
AI_MODEL=claude-sonnet-4-5-20250929

# OpenRouter (optional - cheapest-first multi-model routing)
OPENROUTER_API_KEY=sk-or-xxxxx
OPENROUTER_MODEL=openrouter/auto
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1/chat/completions
OPENROUTER_SITE_URL=https://contentos-project.vercel.app
OPENROUTER_APP_NAME=ContentOS
# OpenRouter fallback chain defaults (cost-first)
OPENROUTER_MODEL_DEEPSEEK=deepseek/deepseek-chat
OPENROUTER_MODEL_MISTRAL=mistralai/mistral-small-3.1
OPENROUTER_MODEL_AUTO=openrouter/auto
# Optional quality overrides (if empty, chain remains deepseek->mistral->auto)
OPENROUTER_MODEL_ECONOMY=
OPENROUTER_MODEL_BALANCED=
OPENROUTER_MODEL_PREMIUM=
# Used only for internal budget estimation (not billing truth)
OPENROUTER_ESTIMATED_INPUT_USD_PER_1M=0.6
OPENROUTER_ESTIMATED_OUTPUT_USD_PER_1M=2.4

# Route-level model overrides (optional, cost optimization)
AI_MODEL_SCORE=claude-3-5-haiku-latest
AI_MODEL_COACH=claude-3-5-haiku-latest
AI_MODEL_GENERATE=claude-sonnet-4-5-20250929
AI_MODEL_RESEARCH=claude-3-5-haiku-latest

# Cheapest-first + escalation model controls
AI_MODEL_SCORE_ECONOMY=claude-3-5-haiku-latest
AI_MODEL_SCORE_PREMIUM=claude-sonnet-4-5-20250929
AI_MODEL_GENERATE_ECONOMY=claude-3-5-haiku-latest
AI_MODEL_GENERATE_PREMIUM=claude-sonnet-4-5-20250929
AI_MODEL_COACH_ECONOMY=claude-3-5-haiku-latest
AI_MODEL_COACH_PREMIUM=claude-sonnet-4-5-20250929
AI_MODEL_RESEARCH_ECONOMY=claude-3-5-haiku-latest
AI_MODEL_RESEARCH_PREMIUM=claude-sonnet-4-5-20250929

# Escalation thresholds
AI_SCORE_PREMIUM_THRESHOLD=68
AI_GENERATE_PREMIUM_THRESHOLD=70
AI_COACH_ESCALATE_BELOW_ENGAGEMENT=2
AI_BRAINDUMP_PREMIUM_THRESHOLD=5200

# ROI gate (premium escalation allowed only when expected value >= N x incremental cost)
AI_PREMIUM_MIN_ROI_MULTIPLE=3
AI_PREMIUM_MIN_ROI_MULTIPLE_LEADS=1.8
AI_DEFAULT_VALUE_PER_SCORE_POINT_USD=0.03
AI_OBJECTIVE_VALUE_MULTIPLIER_ENGAGEMENT=1
AI_OBJECTIVE_VALUE_MULTIPLIER_REACH=0.9
AI_OBJECTIVE_VALUE_MULTIPLIER_SAVES=1.3
AI_OBJECTIVE_VALUE_MULTIPLIER_LEADS=3.2
AI_GENERATE_VALUE_PER_SCORE_POINT_USD=0.03
AI_GENERATE_VALUE_PER_SCORE_POINT_USD_LEADS=0.09
AI_BRAINDUMP_VALUE_PER_SCORE_POINT_USD=0.035
AI_BRAINDUMP_VALUE_PER_SCORE_POINT_USD_LEADS=0.11

# Outcome learning (auto-calibration of ROI gate per org/objective)
AI_ECONOMICS_LEARNING_TTL_MS=21600000
AI_ECONOMICS_LEARNING_LOOKBACK_DAYS=120
AI_ECONOMICS_LEARNING_MIN_SAMPLES=25

# Hard budgets (can be overridden per org in organizations.settings.aiBudget)
AI_BUDGET_DAILY_USD=2
AI_BUDGET_MONTHLY_USD=45

# BrainDump quality controls
BRAINDUMP_DEFAULT_QUALITY=economy
BRAINDUMP_MODEL_ECONOMY=claude-3-5-haiku-latest
BRAINDUMP_MODEL_BALANCED=claude-sonnet-4-5-20250929
BRAINDUMP_MODEL_PREMIUM=claude-sonnet-4-5-20250929

# Firecrawl (web scraping for Research/Inspiration/Braindump URL enrichment)
FIRECRAWL_API_KEY=fc-xxxxx

# Monitoring (health/readiness + synthetic checks)
MONITORING_API_KEY=change-me-monitoring-secret

# Meta (Facebook + Instagram)
# Either META_APP_ID or FACEBOOK_APP_ID works (code checks both)
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
NEXT_PUBLIC_META_APP_ID=your-meta-app-id
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
NEXT_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id
# Set to "true" after enabling pages_manage_posts + instagram_content_publish in Facebook App settings
FACEBOOK_PUBLISH_SCOPES_ENABLED=false

# TikTok
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret

# YouTube
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
YOUTUBE_API_KEY=your-youtube-api-key

# X/Twitter (Optional - Premium)
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# Stripe (Payments)
STRIPE_SECRET_KEY=sk_live_xxxxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=ContentOS
NODE_ENV=development

# Cron Jobs (Vercel Cron)
CRON_SECRET=your-cron-secret

# OpenAI (for embeddings + multi-model router)
OPENAI_API_KEY=sk-xxxxx

# Google AI / Gemini (multi-model router)
GOOGLE_AI_API_KEY=

# Multi-model router: per-task provider/model overrides
# Provider options: anthropic, openrouter, google, openai
